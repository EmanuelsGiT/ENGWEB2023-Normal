extends layout
block content
  .w3-card-4
    header.w3-container.w3-teal
      h1(href="/") Listas de Plantas
    .w3-container
      table.w3-table-all
        tr
          th _id
          th Freguesia
          th Espécie
          th Estado
          th Número de Intervenções
        
        each l in lists
          tr
            td
              a(href="/" + l._id) #{l._id}
            td= l.Freguesia
            td 
              a(href="/especies/"+l.Especie) #{l.Especie}
            td= l.Estado
            td= l.NumeroIntervencoes
              
    footer.w3-container.w3-teal
      h5 Generated by Exame::EngWeb2023 in #{d}
