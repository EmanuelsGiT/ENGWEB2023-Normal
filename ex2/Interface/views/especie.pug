extends layout
block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Listas de Informacoes: #{lists[0].Especie}
      a(href="/") VOLTAR PAGINA INICIAL
    .w3-container
      table.w3-table-all
        tr
          th _id
          th Espécie
          th Freguesia
          th Nome Científico
          th Estado
          th Número de Intervenções
        
        each l in lists
          tr
            td
              a(href="/" + l._id) #{l._id}
            td= l.Especie
            td= l.Freguesia
            td= l.NomeCientifico
            td= l.Estado
            td= l.NumeroIntervencoes
              
    footer.w3-container.w3-teal
      h5 Generated by rpcwteste::EngWeb2023 in #{d}
